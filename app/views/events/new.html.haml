- provide :title, "New Event"

= form_for @event do |f|
  = f.label :name
  %br/
  = f.text_field :name
  %br/
  = f.label :location
  %br/
  = f.text_field :location
  %br/
  = f.label :date
  %br/
  = f.datetime_select :datetime, order: [:day, :month, :year, :hour, :minute], ampm: true, start_year: Date.current.year, end_year: Date.current.year + 10, minute_step: 10
  %br/
  = f.label :description
  %br
  = f.text_area :description
  %br
  = f.submit
